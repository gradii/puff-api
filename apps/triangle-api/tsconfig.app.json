{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "ESNext",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
